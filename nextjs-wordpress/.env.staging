# Staging Environment Variables

# Environment Detection
NODE_ENV=production
NEXT_PUBLIC_ENVIRONMENT=staging

# WordPress Configuration - Staging URLs (Primary)
NEXT_PUBLIC_WORDPRESS_URL=https://staging.moreyeahs.com
WORDPRESS_REST_API_URL=https://staging.moreyeahs.com/wp-json
WORDPRESS_API_URL=https://staging.moreyeahs.com/graphql

# WordPress Configuration - Development URLs
NEXT_PUBLIC_WORDPRESS_DEV_URL=https://dev.moreyeahs.com
WORDPRESS_DEV_API_URL=https://dev.moreyeahs.com/wp-json

# WordPress Configuration - Production URLs
NEXT_PUBLIC_WORDPRESS_PROD_URL=https://moreyeahs.com
WORDPRESS_PROD_API_URL=https://moreyeahs.com/wp-json

# WordPress Configuration - Local Development URLs
NEXT_PUBLIC_WORDPRESS_FALLBACK_URL=http://localhost/moreyeahs-new
WORDPRESS_FALLBACK_API_URL=http://localhost/moreyeahs-new/wp-json

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://staging-moreyeahsnew.vercel.app
NEXT_PUBLIC_SITE_NAME=MoreYeahs Staging
NEXT_PUBLIC_SITE_DESCRIPTION=Staging environment for MoreYeahs

# Revalidation (in seconds)
REVALIDATE_TIME=1800

# JWT Authentication
JWT_AUTH_SECRET_KEY=your-super-secret-jwt-key-change-this-in-staging
ALLOWED_ORIGIN=https://staging-moreyeahsnew.vercel.app

# Enable/Disable Authentication Middleware
ENABLE_AUTH_MIDDLEWARE=false

# Build Configuration
ALLOW_BUILD_WITHOUT_WORDPRESS=true