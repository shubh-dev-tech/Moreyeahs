# Vercel Environment Variables
# This configuration pulls data from dev.moreyeahs.com for Vercel deployments

# Environment Detection
NODE_ENV=production
NEXT_PUBLIC_ENVIRONMENT=vercel

# WordPress Configuration - Using dev.moreyeahs.com as data source
WORDPRESS_API_URL=https://dev.moreyeahs.com/graphql
NEXT_PUBLIC_WORDPRESS_URL=https://dev.moreyeahs.com
WORDPRESS_REST_API_URL=https://dev.moreyeahs.com/wp-json
NEXT_PUBLIC_WORDPRESS_PROD_URL=https://dev.moreyeahs.com
WORDPRESS_PROD_API_URL=https://dev.moreyeahs.com/wp-json

# WordPress Configuration - Development URLs (fallback)
NEXT_PUBLIC_WORDPRESS_DEV_URL=https://dev.moreyeahs.com
WORDPRESS_DEV_API_URL=https://dev.moreyeahs.com/wp-json

# WordPress Configuration - Staging URLs (fallback)
NEXT_PUBLIC_WORDPRESS_STAGING_URL=https://staging.moreyeahs.com
WORDPRESS_STAGING_API_URL=https://staging.moreyeahs.com/wp-json

# WordPress Configuration - Local Development URLs (fallback)
NEXT_PUBLIC_WORDPRESS_FALLBACK_URL=https://dev.moreyeahs.com
WORDPRESS_FALLBACK_API_URL=https://dev.moreyeahs.com/wp-json

# Site Configuration
# Update with your actual Vercel deployment URL
NEXT_PUBLIC_SITE_URL=https://your-vercel-app.vercel.app
NEXT_PUBLIC_SITE_NAME=MoreYeahs
NEXT_PUBLIC_SITE_DESCRIPTION=A modern headless WordPress site built with Next.js

# Revalidation (in seconds) - shorter for dev data
REVALIDATE_TIME=1800

# JWT Authentication (Use strong random strings in production)
JWT_AUTH_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-64-chars-min
ALLOWED_ORIGIN=https://your-vercel-app.vercel.app

# Security Settings
NODE_ENV=production

# Disable authentication middleware for static builds
ENABLE_AUTH_MIDDLEWARE=false

# Build Configuration
# Set to true to allow builds without WordPress connection
ALLOW_BUILD_WITHOUT_WORDPRESS=true

# Vercel-specific settings
VERCEL=1
VERCEL_ENV=production