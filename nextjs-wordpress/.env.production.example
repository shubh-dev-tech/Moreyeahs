# Production Environment Variables
# Copy this file to .env.production and update with your production values

# WordPress Configuration
WORDPRESS_API_URL=https://your-production-site.com/graphql
NEXT_PUBLIC_WORDPRESS_URL=https://your-production-site.com
WORDPRESS_REST_API_URL=https://your-production-site.com/wp-json

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://your-nextjs-production-site.com
NEXT_PUBLIC_SITE_NAME=Your Site Name
NEXT_PUBLIC_SITE_DESCRIPTION=Your site description

# Revalidation (in seconds)
REVALIDATE_TIME=3600

# JWT Authentication (IMPORTANT: Use strong random strings in production)
JWT_AUTH_SECRET_KEY=CHANGE-THIS-TO-A-STRONG-RANDOM-STRING-64-CHARACTERS-OR-MORE
ALLOWED_ORIGIN=https://your-nextjs-production-site.com

# Security Settings
NODE_ENV=production

# Optional: Analytics
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Optional: Error Tracking
# SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
