{
  "name": "stepper-block",
  "title": "Stepper Block",
  "description": "Vertical stepper with automatic numbering",
  "category": "formatting",
  "icon": "list-view",
  "keywords": ["stepper", "steps", "navigation"],
  "acf": {
    "mode": "preview",
    "renderTemplate": "block.php"
  },
  "supports": {
    "align": ["wide", "full"],
    "anchor": true
  },
  "fields": [
    {
      "key": "field_stepper_mode",
      "label": "Stepper Mode",
      "name": "stepper_mode",
      "type": "radio",
      "instructions": "Choose how to populate the stepper",
      "required": 1,
      "choices": {
        "auto": "Auto-detect sections from page",
        "manual": "Manual entry"
      },
      "default_value": "auto",
      "layout": "horizontal"
    },
    {
      "key": "field_stepper_steps",
      "label": "Steps",
      "name": "steps",
      "type": "repeater",
      "instructions": "Add your steps manually. Numbers are automatic.",
      "required": 0,
      "conditional_logic": [
        [
          {
            "field": "field_stepper_mode",
            "operator": "==",
            "value": "manual"
          }
        ]
      ],
      "layout": "block",
      "button_label": "Add Step",
      "sub_fields": [
        {
          "key": "field_step_label",
          "label": "Step Label",
          "name": "label",
          "type": "text",
          "required": 1,
          "placeholder": "e.g., Operating Models"
        },
        {
          "key": "field_step_section_id",
          "label": "Section ID",
          "name": "section_id",
          "type": "text",
          "instructions": "The ID of the section to scroll to (e.g., hero_slider, operating_models)",
          "required": 1,
          "placeholder": "e.g., operating_models"
        }
      ]
    },

  ]
}
