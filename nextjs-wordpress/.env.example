# WordPress Configuration
WORDPRESS_API_URL=https://your-wordpress-site.com/graphql
NEXT_PUBLIC_WORDPRESS_URL=https://your-wordpress-site.com

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://your-nextjs-site.com
NEXT_PUBLIC_SITE_NAME=Your Site Name
NEXT_PUBLIC_SITE_DESCRIPTION=Your site description

# Revalidation (in seconds)
REVALIDATE_TIME=3600

# Optional: WordPress REST API (for additional features)
WORDPRESS_REST_API_URL=https://your-wordpress-site.com/wp-json

# JWT Authentication (Optional - only needed if using auth features)
JWT_AUTH_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ALLOWED_ORIGIN=http://localhost:3000

# Enable/Disable Authentication Middleware
# Set to 'true' to enable route protection, 'false' or omit to disable
ENABLE_AUTH_MIDDLEWARE=false
